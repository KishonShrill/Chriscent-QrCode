{
  "rewrites":  [
    {"source": "/(.*)", "destination": "/"}
  ],
  "version": 2,
  "builds": [
    {
      "src": "public/server.cjs",
      "use": "@vercel/node"
    },
    {
      "use": "@vercel/static",
      "entrypoint": "public/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "public/server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "devCommand": "concurrently \"vite --host\" \"node public/server.cjs\""
}